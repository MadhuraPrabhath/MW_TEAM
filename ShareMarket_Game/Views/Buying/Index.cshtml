@{
    ViewBag.Title = "Share Buying Process";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Share Buying Process</h2>
        <div class="row">
            <div class="col-lg-10 col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Company Category</span>
                    <input type="text" readonly id="txtCopCategory" class="form-control "  aria-describedby="basic-addon1">
                </div>
                <br />
            </div>
        </div>
       
        <div class="row">
            <div class="col-lg-10 col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Company Name</span>
                    <input type="text" readonly id="txtCopName" class="form-control " aria-describedby="basic-addon1">
                </div>
                <br />
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-10 col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Buying Quntity</span>
                    <input type="text"  id="txtBuyingQut" class="form-control " aria-describedby="basic-addon1">
                </div>
                <br />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 col-md-10">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Buying Price</span>
                    <input type="text"  id="txtBuyingPrice" class="form-control " aria-describedby="basic-addon1">
                </div>
                <br />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <input type="button" id="btnShareBuy" value="Buy" class="btn btn-success" style="width: 90%" />
            </div>
            <div class="col-lg-3 col-md-3">
                <input type="button" id="btnShareCancel" value="Cancel" class="btn btn-success" style="width: 90%" />
            </div>
        </div>
    </div>
</div>




@section scripts{
    <script src="~/Scripts/PgeScripts/Game.js" type="text/javascript"></script>
}